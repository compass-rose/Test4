<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.fro.atmenv_cplxmonitorcase.GraphActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tem_graph_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="- -" />

            <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
                android:id="@+id/tem_sb"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="fill_horizontal" />

            <Button
                android:id="@+id/tem_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/btn_shape"
                android:text="温度" />
        </LinearLayout>

        <!-- 湿度 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hum_graph_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="- -" />

            <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
                android:id="@+id/hum_sb"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <Button
                android:id="@+id/hum_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/btn_shape"
                android:text="湿度" />
        </LinearLayout>

        <!-- 光照度 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sun_graph_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="- -" />

            <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
                android:id="@+id/sun_sb"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <Button
                android:id="@+id/sun_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/btn_shape"
                android:text="光照度" />
        </LinearLayout>

        <!-- PM2.5 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pm25_graph_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="- -" />

            <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
                android:id="@+id/pm25_sb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />

            <Button
                android:id="@+id/pm25_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/btn_shape"
                android:text="PM2.5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
